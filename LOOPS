//c)
function imprimirC (lista3) {
    const pares = []
    for (let i = 0; i < lista3.length; i++) {
        if (lista3[i] % 2 === 0){
        pares.push (lista3[i])
        }
    }
    console.log (pares)
 }
 const array = [80, 30, 130, 40, 60, 21, 70, 120, 90, 103, 110, 55]
imprimirC(array);



