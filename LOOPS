let bichos = prompt ("quantos bichos de estimaçao voce quer ter?")

if (bichos === 0) {
    console.log ("Que pena! Adote um bichinho")
} else if (bichos > 0) {
    let i = 0 
    const array = []
    while (i < bichos) { 
        const nome = prompt ("fale o nome dos seus bichos")
        array.push(nome)
        console.log (nome)
        i++
    }
    console.log (array)
}


