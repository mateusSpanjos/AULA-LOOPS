// Exercicio 2
function encontrar (array) {
    let maior = array[0]
    for (let i = 0; i > array.length; i++) {
        if (array[i] > maior) {
            maior = array[i]
        }
    }
    return 'o maior numero é ' + maior
}

const numeros = [1, 2, 43]
const resultado = encontrar (numeros)
console.log (resultado)

const array = [12, 15, 90, 70]

for (const  elemento of array) {
    console.log(elemento)
}

array.forEach(elemento => {
    console.log (elemento)
});


// EXERCICIO 3
let palavras = ["a", "b", "c"]
function retornaFraseCompleta(arrayDePalavras) {
let frase = " "
    for (let i =0; i < arrayDePalavras.length; i++) {
        const elemento = arrayDePalavras.length[i]
        frase = frase + " " + elemento
    }
    return frase
}
console.log (retornaFraseCompleta(palavras))





